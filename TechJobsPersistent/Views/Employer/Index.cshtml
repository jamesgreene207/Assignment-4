@model List<TechJobsPersistent.Models.Employer>

<h1>Employers Currently Hiring</h1>

<div class="text-center">
    
    <a asp-controller="Home" asp-action="AddJob">Add Jobs</a> &nbsp
    <a asp-controller="List" asp-action="Index">| List Jobs</a> &nbsp
    <a asp-controller="Search" asp-action="Index">| Search Jobs</a> &nbsp
    <br><a asp-controller="Employer" asp-action="Index">List Employers</a> &nbsp
    <a asp-controller="Employer" asp-action="Add">| Add Employers</a> &nbsp
</div>

@if (Model.Count == 0)
{
    <p>No employers are currently hiring!</p>
}
else
{
    <div>
        <ul>
            @foreach (Employer employer in Model)
            {
                <li>
                    <a asp-controller="Employer" asp-action="About" asp-route-id="@employer.Id">@employer.Name</a>
                </li>
            }
        </ul>
    </div>
}