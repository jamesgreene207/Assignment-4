@using TechJobsPersistent.ViewModels@model AddJobViewModel;<h1>Add a Job</h1><div class="text-center">    <a asp-controller="Home" asp-action="AddJob">Add Jobs</a> &nbsp    <a asp-controller="List" asp-action="Index">| List Jobs</a> &nbsp    <a asp-controller="Search" asp-action="Index">| Search Jobs</a> &nbsp    <br><a asp-controller="Employer" asp-action="Index">List Employers</a> &nbsp    <a asp-controller="Employer" asp-action="Add">| Add Employers</a> &nbsp    <br><a asp-controller="Skill" asp-action="Add">| Add Skill</a></div><form asp-controller="Home" asp-action="AddJob" method="post">    <div class="form-group">        <label asp-for="Name">Job Name</label>        <input asp-for="Name" />        <span asp-validation-for="Name"></span>    </div>    <div class="form-group">        <label asp-for="EmployerId">Employer</label>        <select asp-for="EmployerId" asp-items="Model.Employers"></select>        <span asp-validation-for="EmployerId"></span>    </div>    <div class="form-group">        <label asp-for="Skills">Skills: </label>        @foreach(var skill in Model.Skills)        {            <label name="selectedSkills">@skill.Name</label>            <input type="checkbox" name="selectedSkills" value="@skill.Id" />        }        <span asp-validation-for="EmployerId"></span>    </div>    <input type="submit" value="Submit" /></form>